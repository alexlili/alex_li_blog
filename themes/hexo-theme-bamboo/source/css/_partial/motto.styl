.motto {
  width: 100%;
  margin-bottom: 16px;
  background: #fff;
  box-shadow: 0 1px 20px -6px rgba(0, 0, 0, 0.5);
  padding: 20px 20px 20px 20px;
  border-radius: 10px;
  box-sizing: border-box;
  transition: all 0.3s;
  position: relative;
  background: convert(hexo-config('motto.background'));
  background-size: cover;
  background-repeat: no-repeat;
  background-position:bottom;

  .motto-title {
    text-align: center;
    color: #fff;
  }

  .motto-content {
    text-align: center;
    padding: 22px 10% 0px 10%;
    color: #fff;
    line-height: 20px;
  }
}

@media (max-width: 551px) {
  .motto {
    .motto-content {
      padding: 15px 10%;
    }
  }
}